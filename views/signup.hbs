

{{#if Notsigned}}
	<h1 class = 'header'>Sign Up For Our Yearly Membership!</h1>
	<div class = "signup">
		<form method="POST" action="/signup">
			Gender: <input type = "radio" name = "gender" value = "female" checked>Female
			<input type = "radio" name = "gender" value = "male">	Male
			<input type = "radio" name = "gender" value = "other">	Other
			<br>
			<br>
			Ideal frequency for activities per week:
			<input type = 'text' name = 'frequency'>
			<br>
			<br>
			<textarea name = "description" rows="4" cols="50" placeholder="Description about yourself..."></textarea>
			<br>
			<input type="submit" value = 'Subscribe!!'>
		</form>
	</div>
	

{{else}}
	
		<h1 class = 'header'>Your Membership Information!</h1>
		<div class = 'signup' style = " border: dotted 2px black; padding: 20px;">
			<div style = 'font-weight: bolder; font-size: 1.2em'>Gender:</div> {{user.gender}}<br>
			<div style = 'font-weight: bolder; font-size: 1.2em'>Ideal frequency for activities per week:</div>{{user.frequency}}<br>
			<div style = 'font-weight: bolder; font-size: 1.2em'>About you:</div>
			{{user.description}}
		</div>






{{/if}}