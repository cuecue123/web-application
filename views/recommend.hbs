<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>NYU Course Recommendation System</title>
  
  
  
      <link rel="stylesheet" href="stylesheets/profileStyle.css">

  
</head>

<body>
  <div id="container">
  <h1 style = "color: #885EAD; margin-top: 2em;">&bull; Recommendation &bull;</h1>
  <div class="underline">
  </div>

  <form action = "" method = "POST">
    <div id = "classList">
      <div class="addCourse" style="clear: float;">
        <label for="name">COURSE NAME</label>
        <input type="text" placeholder="" name="name" id="name_input" class = "flag" required />
      </div>
    </div>


    <div style = "text-align: right; padding-right: 3%;">
      <input type = "submit" id="form_button" value = "GET SCHEDULE" style="float: right; margin-right: -20px; width: 180px; height: 60px; text-align: center;" />
    </div>


  </form><!-- // End form -->

      <div style = "text-align: right; padding-right: 3%;">
      <button onclick = "add()" id="form_button" style = "margin-bottom: 10px;  width: 180px; height: 60px; ">ADD COURSE</button>
    </div>


    <div style = "text-align: right; padding-right: 3%; ">
      <button onclick = "remove()" id="form_button" style = "margin-bottom: 20px;  width: 180px; height: 60px; ">REMOVE</button>
    </div>



      
</div><!-- // End #container -->
  <script>

 
  function remove(){

    let classArr = document.getElementsByClassName('flag');


    if (classArr.length > 1){
      var classPool = document.getElementById('classList');
      classPool.removeChild(classPool.lastChild);

    }


  }
  function add(){

  var count = 0;
    if (count < 4){
      count ++;
      let classArr = document.getElementsByClassName('flag');
      var flagBool = false; 

      for (let i = 0; i < classArr.length; i++){
        if (classArr[i].value == ''){
          flagBool = true;
        }
      }

      if (flagBool == false){
        var parent = document.getElementById('classList');
        var child = document.createElement('div');
        child.setAttribute('class', 'addCourse');
        var labels = document.createElement('label');
        var inputs = document.createElement('input');
        labels.setAttribute('for', 'name');
        inputs.setAttribute('type','text');
        let inputName = 'name'+count;
        inputs.setAttribute( 'name',inputName);
        inputs.setAttribute( 'id','name_input');
        inputs.setAttribute('class', 'flag');

        child.appendChild(labels);
        child.appendChild(inputs);
        parent.appendChild(child);

      }


    }

  

  }






  

    
  </script>
  
</body>
</html>
